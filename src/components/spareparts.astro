import { Icon } from "astro-icon/components";

const spareparts = [
  {
    title: "Bombas",
    description:
      "Repuestos de bombas hidráulicas de alta eficiencia para garantizar el flujo y presión óptimos en tu sistema.",
    icon: "bx:bxs-droplet",
  },
  {
    title: "Motores",
    description:
      "Motores hidráulicos de reemplazo con materiales resistentes y precisión en el rendimiento para uso industrial.",
    icon: "bx:bxs-cog",
  },
  {
    title: "Válvulas",
    description:
      "Válvulas hidráulicas originales para controlar flujo, dirección y presión con exactitud en tu maquinaria.",
    icon: "bx:bxs-toggle-right",
  },
  {
    title: "Cilindros",
    description:
      "Cilindros hidráulicos de repuesto, fabricados con estándares internacionales para máxima durabilidad.",
    icon: "bx:bxs-cylinder",
  },
  {
    title: "Filtros",
    description:
      "Filtros hidráulicos que aseguran limpieza de fluidos, protegiendo componentes y alargando la vida útil del sistema.",
    icon: "bx:bxs-filter-alt",
  },
  {
    title: "Mangueras y Conexiones",
    description:
      "Mangueras hidráulicas y conexiones resistentes a alta presión, compatibles con múltiples configuraciones industriales.",
    icon: "simple-icons:gitconnected",
  },
  {
    title: "Aceites",
    description:
      "Aceites hidráulicos de calidad premium para lubricación y protección contra desgaste en todo tipo de equipos.",
    icon: "bx:droplet",
